# Application Settings
APP_NAME=rag-anything-mcp
VERSION=1.0.0
ENVIRONMENT=production  # Options: development, staging, production
DEBUG=false

# Logging Settings
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text
LOG_FILE_PATH=  # Leave empty for stdout only, or specify path like ./logs/app.log

# OpenAI API Settings (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIM=3072

# RAG Processing Settings
RAG_WORKING_DIR=./rag_storage
RAG_DEFAULT_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_MAX_WORKERS=4

# File Processing Settings
SUPPORTED_FILE_EXTENSIONS=[".pdf",".docx",".pptx",".txt",".md"]
MAX_FILE_SIZE_MB=100
ENABLE_RECURSIVE_PROCESSING=true

# Multimodal Processing Settings
ENABLE_IMAGE_PROCESSING=true
ENABLE_TABLE_PROCESSING=true
ENABLE_EQUATION_PROCESSING=true
IMAGE_MAX_DIMENSION=2048

# Performance Settings
REQUEST_TIMEOUT=300
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Security Settings
ALLOWED_HOSTS=["*"]
API_RATE_LIMIT=100
ENABLE_API_KEY_AUTH=false
